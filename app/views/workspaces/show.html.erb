<div class="mb-8">
  <h1 class="text-2xl font-bold text-gray-900">%= @workspace.name %></h1>
  <p class="text-gray-500">4 projects</p>
</div>

<div class="mb-8">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-xl font-bold text-gray-900">Projects</h2>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <div class="bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition">
      <div class="mb-4">
        <h3 class="font-semibold text-lg text-gray-900">E-commerce Platform</h3>
        <p class="text-gray-500 mt-1">Build a modern e-commerce platform with React and Node.js</p>
      </div>
      <div class="flex items-center mt-6">
        <div class="flex -space-x-2">
          <img src="https://images.unsplash.com/photo-1534528741775-53994a69daeb?w=100&h=100&fit=crop" class="w-8 h-8 rounded-full border-2 border-white" alt="Team member">
          <img src="https://images.unsplash.com/photo-1517841905240-472988babdf9?w=100&h=100&fit=crop" class="w-8 h-8 rounded-full border-2 border-white" alt="Team member">
        </div>
      </div>
    </div>

    <a href="/project-detail.html" class="block bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition">
      <div class="mb-4">
        <h3 class="font-semibold text-lg text-gray-900">CRM System</h3>
        <p class="text-gray-500 mt-1">Customer relationship management system with analytics</p>
      </div>
      <div class="flex items-center mt-6">
        <div class="flex -space-x-2">
          <img src="https://images.unsplash.com/photo-1517841905240-472988babdf9?w=100&h=100&fit=crop" class="w-8 h-8 rounded-full border-2 border-white" alt="Team member">
          <img src="https://images.unsplash.com/photo-1539571696357-5a69c17a67c6?w=100&h=100&fit=crop" class="w-8 h-8 rounded-full border-2 border-white" alt="Team member">
        </div>
      </div>
    </a>

    <div class="bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition">
      <div class="mb-4">
        <h3 class="font-semibold text-lg text-gray-900">Analytics Dashboard</h3>
        <p class="text-gray-500 mt-1">Real-time analytics dashboard for business metrics</p>
      </div>
      <div class="flex items-center mt-6">
        <div class="flex -space-x-2">
          <img src="https://images.unsplash.com/photo-1534528741775-53994a69daeb?w=100&h=100&fit=crop" class="w-8 h-8 rounded-full border-2 border-white" alt="Team member">
          <img src="https://images.unsplash.com/photo-1539571696357-5a69c17a67c6?w=100&h=100&fit=crop" class="w-8 h-8 rounded-full border-2 border-white" alt="Team member">
        </div>
      </div>
    </div>

    <button onclick="openModal('projectModal')" class="bg-gray-50 rounded-xl border-2 border-dashed border-gray-200 p-6 hover:border-indigo-600 hover:bg-indigo-50 transition-colors group">
      <div class="flex flex-col items-center justify-center h-full text-gray-400 group-hover:text-indigo-600">
        <i data-lucide="plus-circle" class="w-12 h-12 mb-2"></i>
        <span class="font-medium">Add New Project</span>
      </div>
    </button>
  </div>
</div>

