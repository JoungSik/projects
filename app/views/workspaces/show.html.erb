<div class="mb-8">
  <h1 class="text-2xl font-bold text-gray-900"><%= @workspace.name %></h1>
  <p class="text-gray-500"><%= @workspace.projects.count %> projects</p>
</div>

<div class="mb-8">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-xl font-bold text-gray-900">Projects</h2>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @workspace.projects.each do |project| %>
      <%= render "project", project: project %>
    <% end %>

    <button onclick="openModal('projectModal')" class="bg-gray-50 rounded-xl border-2 border-dashed border-gray-200 p-6 hover:border-indigo-600 hover:bg-indigo-50 transition-colors group">
      <div class="flex flex-col items-center justify-center h-full text-gray-400 group-hover:text-indigo-600">
        <%= lucide_icon "plus-circle", class: "w-12 h-12 mb-2" %>
        <span class="font-medium">Add New Project</span>
      </div>
    </button>
  </div>
</div>

<div>
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-xl font-bold text-gray-900">Members</h2>
    <button class="text-gray-400 hover:text-indigo-600">
      <%= lucide_icon "user-plus", class: "w-5 h-5" %>
    </button>
  </div>
  <div class="bg-white rounded-xl shadow-sm p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @workspace.workspace_users.each do |workspace_user| %>
        <%= render "member", user: workspace_user.user, role: workspace_user.role %>
      <% end %>
    </div>
  </div>
</div>
