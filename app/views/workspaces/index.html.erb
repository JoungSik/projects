<% if @workspaces.blank? %>
  <div class="text-center">
    <div class="flex justify-center">
      <%= lucide_icon "briefcase", class: "w-16 h-16 text-gray-400" %>
    </div>
    <h2 class="mt-4 text-xl font-semibold text-gray-900">No workspaces yet</h2>
    <p class="mt-2 text-gray-600">Get started by creating your first workspace</p>
    <button onclick="openModal('workspaceModal')" class="mt-6 px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 flex items-center mx-auto">
      <%= lucide_icon "plus", class: "w-5 h-5 mr-2" %>
      Create Workspace
    </button>
  </div>
<% end %>

<div class="flex items-center justify-between mb-8">
  <h1 class="text-2xl font-bold text-gray-900">Your Workspaces</h1>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @workspaces.each do |workspace| %>
    <%= render "workspace", workspace: workspace %>
  <% end %>
</div>
