<% if @workspaces %>
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-2xl font-bold text-gray-900"><%= t("workspaces.header") %></h1>
  </div>
<% else %>
  <div class="min-h-screen flex items-center justify-center p-4">
    <div class="text-center">
      <div class="flex justify-center">
        <%= lucide_icon "briefcase", class: "w-16 h-16 text-gray-400" %>
      </div>
      <h2 class="mt-4 text-xl font-semibold text-gray-900"><%= t("workspaces.blank.title") %></h2>
      <p class="mt-2 text-gray-600"><%= t("workspaces.blank.description") %></p>
      <%= link_to new_workspace_path, class: "mt-6 px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 inline-flex items-center cursor-pointer" do %>
        <%= lucide_icon "plus", class: "w-5 h-5 mr-2" %>
        <%= t("workspaces.buttons.create") %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @workspaces.each do |workspace| %>
    <%= render "workspace", workspace: workspace %>
  <% end %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
</div>

