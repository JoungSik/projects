<%= content_tag :div, class: "p-4 bg-gray-50 rounded-lg cursor-pointer" do %>
  <%= link_to workspace do %>
    <div class="flex items-center justify-between mb-2">
      <div class="flex items-center space-x-3">
        <div class="h-10 w-10 bg-indigo-100 rounded-lg flex items-center justify-center">
          <%= lucide_icon "briefcase", class: "w-6 h-6 text-indigo-600" %>
        </div>
        <div>
          <h4 class="font-medium text-gray-900"><%= workspace.name %></h4>
        </div>
      </div>
    </div>
    <div class="mt-4 flex items-center justify-between">
      <div class="flex -space-x-2">
        <% workspace.workspace_users.limit(5).each do |workspace_user| %>
          <img src="<%= avatar_url(workspace_user.user) %>" class="w-8 h-8 rounded-full border-2 border-white"
               alt="<%= workspace_user.user.name %>">
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
