<%= link_to workspace_project_path(project), class: "block bg-white rounded-xl shadow-sm p-6 hover:shadow-md transition" do %>
  <div class="mb-4">
    <h3 class="font-semibold text-lg text-gray-900"><%= project.title %></h3>
    <p class="text-gray-500 mt-1"><%= project.description %></p>
  </div>
  <div class="flex items-center justify-between mt-6">
    <div class="flex items-center text-sm text-gray-600">
      <%= lucide_icon "check-circle", class: "w-4 h-4 mr-1" %>
      <span><%= t("tasks.count", count: project.tasks.count) %></span>
    </div>
  </div>
<% end %>
