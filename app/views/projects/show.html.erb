<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <div class="flex items-center space-x-2 mb-2">
        <%= link_to workspace_path(@workspace), class: "text-sm text-gray-500 hover:text-indigo-600 flex items-center" do %>
          <%= lucide_icon "briefcase", class: "w-4 h-4 mr-1" %>
          <%= @workspace.name %>
        <% end %>
        <span class="text-gray-400">/</span>
        <div class="flex items-center space-x-2">
          <h1 class="text-2xl font-bold text-gray-900"><%= @project.title %></h1>
          <div class="flex items-center space-x-1">
            <%= link_to edit_workspace_project_path(@workspace, @project), class: "p-1 text-gray-400 hover:text-indigo-600 rounded-full hover:bg-gray-100" do %>
              <%= lucide_icon "edit", class: "w-5 h-5" %>
            <% end %>
            <%= button_to workspace_project_path(@workspace, @project), method: :delete,
                          class: "p-1 my-auto text-gray-400 hover:text-red-600 rounded-full hover:bg-gray-100 cursor-pointer",
                          data: { turbo_confirm: t("shared.confirm.destroy") } do %>
              <%= lucide_icon "trash-2", class: "w-5 h-5" %>
            <% end %>
          </div>
        </div>
      </div>
      <p class="text-gray-500"><%= @project.description %></p>
    </div>
    <button onclick="openModal('taskModal')" class="flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 cursor-pointer">
      <%= lucide_icon "plus", class: "w-5 h-5 mr-2" %>
      <%= t("tasks.buttons.create") %>
    </button>
  </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-6">
  <!-- Not Started -->
  <div class="bg-white rounded-xl shadow-sm p-4">
    <h3 class="font-semibold text-gray-900 mb-4 flex items-center">
      <i data-lucide="clock" class="w-5 h-5 mr-2 text-gray-400"></i>
      Not Started
      <span class="ml-2 px-2 py-1 text-xs bg-gray-100 text-gray-600 rounded-full">3</span>
    </h3>
    <div class="space-y-4">
      <div onclick="openModal('taskDetailModal')" class="bg-white border rounded-lg p-4 cursor-pointer hover:shadow-md transition">
        <div class="flex items-center justify-between mb-2">
          <span class="px-2 py-1 text-xs bg-purple-100 text-purple-700 rounded-full">Planning</span>
          <span class="px-2 py-1 text-xs bg-red-100 text-red-700 rounded-full">P0</span>
        </div>
        <h4 class="font-medium text-gray-900">Design system architecture</h4>
        <p class="text-sm text-gray-500 mt-1">Create initial system design and architecture documentation</p>
        <div class="mt-4 flex flex-col space-y-2">
          <div class="flex items-center">
            <img src="https://images.unsplash.com/photo-1534528741775-53994a69daeb?w=100&h=100&fit=crop" class="w-6 h-6 rounded-full" alt="">
            <span class="text-xs text-gray-500 ml-2">Sarah Chen</span>
          </div>
          <div class="flex items-center text-xs text-gray-500">
            <i data-lucide="calendar" class="w-4 h-4 mr-1"></i>
            Due Mar 15
          </div>
        </div>
      </div>

      <div class="bg-white border rounded-lg p-4 cursor-pointer hover:shadow-md transition">
        <div class="flex items-center justify-between mb-2">
          <span class="px-2 py-1 text-xs bg-blue-100 text-blue-700 rounded-full">Feature</span>
          <span class="px-2 py-1 text-xs bg-orange-100 text-orange-700 rounded-full">P2</span>
        </div>
        <h4 class="font-medium text-gray-900">Implement user authentication</h4>
        <p class="text-sm text-gray-500 mt-1">Set up JWT-based authentication system</p>
        <div class="mt-4 flex flex-col space-y-2">
          <div class="flex items-center">
            <img src="https://images.unsplash.com/photo-1517841905240-472988babdf9?w=100&h=100&fit=crop" class="w-6 h-6 rounded-full" alt="">
            <span class="text-xs text-gray-500 ml-2">Alex Kim</span>
          </div>
          <div class="flex items-center text-xs text-gray-500">
            <i data-lucide="calendar" class="w-4 h-4 mr-1"></i>
            Due Mar 20
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- In Progress -->
  <div class="bg-white rounded-xl shadow-sm p-4">
    <h3 class="font-semibold text-gray-900 mb-4 flex items-center">
      <i data-lucide="loader" class="w-5 h-5 mr-2 text-blue-500"></i>
      In Progress
      <span class="ml-2 px-2 py-1 text-xs bg-gray-100 text-gray-600 rounded-full">2</span>
    </h3>
    <div class="space-y-4">
      <div class="bg-white border rounded-lg p-4 cursor-pointer hover:shadow-md transition">
        <div class="flex items-center justify-between mb-2">
          <span class="px-2 py-1 text-xs bg-blue-100 text-blue-700 rounded-full">Feature</span>
          <span class="px-2 py-1 text-xs bg-red-100 text-red-700 rounded-full">P1</span>
        </div>
        <h4 class="font-medium text-gray-900">Product catalog API</h4>
        <p class="text-sm text-gray-500 mt-1">Implement REST API for product management</p>
        <div class="mt-4 flex flex-col space-y-2">
          <div class="flex items-center">
            <img src="https://images.unsplash.com/photo-1539571696357-5a69c17a67c6?w=100&h=100&fit=crop" class="w-6 h-6 rounded-full" alt="">
            <span class="text-xs text-gray-500 ml-2">John Cooper</span>
          </div>
          <div class="flex items-center text-xs text-gray-500">
            <i data-lucide="calendar" class="w-4 h-4 mr-1"></i>
            Due Mar 18
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Completed -->
  <div class="bg-white rounded-xl shadow-sm p-4">
    <h3 class="font-semibold text-gray-900 mb-4 flex items-center">
      <i data-lucide="check-circle" class="w-5 h-5 mr-2 text-green-500"></i>
      Completed
      <span class="ml-2 px-2 py-1 text-xs bg-gray-100 text-gray-600 rounded-full">0</span>
    </h3>
    <div class="flex flex-col items-center justify-center py-8 text-center">
      <div class="bg-gray-50 rounded-full p-3 mb-4">
        <i data-lucide="check-circle" class="w-8 h-8 text-gray-400"></i>
      </div>
      <p class="text-gray-500 text-sm">No completed tasks yet</p>
      <p class="text-gray-400 text-xs mt-1">Tasks marked as complete will appear here</p>
    </div>
  </div>

  <!-- Cancelled -->
  <div class="bg-white rounded-xl shadow-sm p-4">
    <h3 class="font-semibold text-gray-900 mb-4 flex items-center">
      <i data-lucide="x-circle" class="w-5 h-5 mr-2 text-red-500"></i>
      Cancelled
      <span class="ml-2 px-2 py-1 text-xs bg-gray-100 text-gray-600 rounded-full">1</span>
    </h3>
    <div class="space-y-4">
      <div class="bg-white border rounded-lg p-4 cursor-pointer hover:shadow-md transition opacity-75">
        <div class="flex items-center justify-between mb-2">
          <span class="px-2 py-1 text-xs bg-yellow-100 text-yellow-700 rounded-full">Issue</span>
          <span class="px-2 py-1 text-xs bg-gray-100 text-gray-600 rounded-full">P4</span>
        </div>
        <h4 class="font-medium text-gray-900 line-through">Legacy system integration</h4>
        <p class="text-sm text-gray-500 mt-1">Integrate with old inventory system</p>
        <div class="mt-4 flex flex-col space-y-2">
          <div class="flex items-center">
            <img src="https://images.unsplash.com/photo-1517841905240-472988babdf9?w=100&h=100&fit=crop" class="w-6 h-6 rounded-full" alt="">
            <span class="text-xs text-gray-500 ml-2">Alex Kim</span>
          </div>
          <div class="flex items-center text-xs text-gray-500">
            <i data-lucide="calendar" class="w-4 h-4 mr-1"></i>
            Cancelled Mar 5
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Overdue -->
  <div class="bg-white rounded-xl shadow-sm p-4">
    <h3 class="font-semibold text-gray-900 mb-4 flex items-center">
      <i data-lucide="alert-circle" class="w-5 h-5 mr-2 text-yellow-500"></i>
      Overdue
      <span class="ml-2 px-2 py-1 text-xs bg-gray-100 text-gray-600 rounded-full">1</span>
    </h3>
    <div class="space-y-4">
      <div class="bg-white border-2 border-red-200 rounded-lg p-4 cursor-pointer hover:shadow-md transition">
        <div class="flex items-center justify-between mb-2">
          <span class="px-2 py-1 text-xs bg-blue-100 text-blue-700 rounded-full">Feature</span>
          <span class="px-2 py-1 text-xs bg-red-100 text-red-700 rounded-full">P0</span>
        </div>
        <h4 class="font-medium text-gray-900">Payment gateway integration</h4>
        <p class="text-sm text-gray-500 mt-1">Integrate Stripe payment processing</p>
        <div class="mt-4 flex flex-col space-y-2">
          <div class="flex items-center">
            <img src="https://images.unsplash.com/photo-1539571696357-5a69c17a67c6?w=100&h=100&fit=crop" class="w-6 h-6 rounded-full" alt="">
            <span class="text-xs text-gray-500 ml-2">John Cooper</span>
          </div>
          <div class="flex items-center text-xs text-red-500">
            <i data-lucide="calendar" class="w-4 h-4 mr-1"></i>
            3 days overdue
          </div>
        </div>
      </div>
    </div>
  </div>
</div>