<div class="max-w-3xl mx-auto">
  <div class="bg-white rounded-xl shadow-sm overflow-hidden">
    <div class="p-8">
      <div class="flex items-center space-x-6">
        <div class="relative">
          <img src="<%= avatar_url(@current_user) %>" class="w-24 h-24 rounded-full"
               alt="<%= @current_user.name %>">
          <!--          <button class="absolute bottom-0 right-0 bg-white rounded-full p-1 shadow-sm border">-->
          <%#= lucide_icon "edit", class: "w-4 h-4 text-gray-500" %>
          <!--          </button>-->
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= @current_user.name %></h1>
          <p class="text-gray-500"><%= @current_user.email %></p>
        </div>
      </div>
    </div>

    <div class="border-t">
      <%= render "form", user: @current_user %>
    </div>
  </div>
</div>