<div class="flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <div class="flex justify-center">
        <%= lucide_icon "user-check", class: "w-12 h-12 text-indigo-600" %>
      </div>
      <h1 class="mt-6 text-3xl font-bold text-gray-900"><%= t("users.new.header") %></h1>
    </div>

    <div class="bg-white py-8 px-4 shadow-sm rounded-lg sm:px-10">
      <div class="mb-8 p-4 bg-indigo-50 rounded-lg">
        <div class="flex items-center space-x-4">
          <img src="<%= avatar(@user_invitation.inviter) %>" class="w-12 h-12 rounded-full"
               alt="<%= @user_invitation.inviter.name %>">
          <div>
            <p class="text-sm text-indigo-900">
              <span class="font-medium"><%= @user_invitation.inviter.name %></span> <%= t("users.new.inviter") %>
            </p>
            <h2 class="text-lg font-semibold text-indigo-900"><%= t("app.name") %></h2>
          </div>
        </div>
      </div>

      <%= form_with(model: @user, class: "space-y-6") do |form| %>
        <%= render "shared/error", errors: @user.errors %>

        <%= hidden_field_tag :token, params[:token] %>
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700"><%= t("users.name.label") %></label>
          <%= form.text_field :name,
                              required: true,
                              placeholder: t("users.name.placeholder"),
                              value: @user.name,
                              class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700"><%= t("users.email.label") %></label>
          <%= form.email_field :email,
                               required: true,
                               readonly: true,
                               autocomplete: "email",
                               placeholder: t("users.email.placeholder"),
                               value: @user_invitation.invitee_email,
                               class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-50 sm:text-sm" %>
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700"><%= t("users.password.label") %></label>
          <div class="mt-1 relative">
            <%= form.password_field :password,
                                    required: true,
                                    placeholder: t("users.password.placeholder"),
                                    class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            <!--            <button type="button" id="togglePassword" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700">-->
            <%#= lucide_icon "eye", class: "h-5 w-5" %>
            <!--            </button>-->
          </div>
        </div>

        <div>
          <label for="password_confirmation" class="block text-sm font-medium text-gray-700"><%= t("users.confirm_password.label") %></label>
          <div class="mt-1 relative">
            <%= form.password_field :password_confirmation,
                                    required: true,
                                    placeholder: t("users.confirm_password.placeholder"),
                                    class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            <!--            <button type="button" id="togglePassword" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700">-->
            <%#= lucide_icon "eye", class: "h-5 w-5" %>
            <!--            </button>-->
          </div>
        </div>

        <div>
          <%= form.submit t("shared.buttons.sign_up"),
                          class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>