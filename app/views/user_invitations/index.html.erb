<div class="flex justify-between items-center mb-8">
  <div>
    <h1 class="text-2xl font-bold text-gray-900"><%= t("user_invitations.index.header") %></h1>
    <p class="text-gray-500 mt-1"><%= t("user_invitations.index.sub_header") %></p>
  </div>
  <%= link_to t("user_invitations.buttons.create"), new_user_invitation_path,
              class: "rounded-md my-auto px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
</div>

<div class="bg-white rounded-xl shadow-sm overflow-hidden">
  <div class="overflow-x-auto">
    <% if @user_invitations.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t("user_invitations.table.columns.email") %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t("user_invitations.table.columns.invited_at") %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t("user_invitations.table.columns.expires_at") %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t("user_invitations.table.columns.status") %>
            </th>
            <!--            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">-->
            <%#= t("user_invitations.table.columns.action") %>
            <!--            </th>-->
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @user_invitations.each do |user_invitation| %>
            <%= render "user_invitations/user_invitation", user_invitation: user_invitation %>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center my-10"><%= t("user_invitations.blank.title") %></p>
    <% end %>
  </div>
</div>