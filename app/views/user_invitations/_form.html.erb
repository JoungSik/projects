<%= form_with(model: user_invitation, class: "bg-white w-full max-w-lg", data: { turbo_frame: "_top" }) do |form| %>
  <%= render "shared/error", errors: user_invitation.errors %>

  <div class="space-y-6">
    <div>
      <label for="invitee_email" class="block text-sm font-medium text-gray-700 mb-2"><%= t("user_invitations.email.label") %></label>
      <%= form.email_field :invitee_email,
                           required: true,
                           placeholder: t("user_invitations.email.placeholder"),
                           value: user_invitation.invitee_email,
                           class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <label for="message" class="block text-sm font-medium text-gray-700 mb-2"><%= t("user_invitations.message.label") %></label>
      <%= form.text_field :message,
                          placeholder: t("user_invitations.message.placeholder"),
                          value: user_invitation.message,
                          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      <p class="mt-4 text-sm text-gray-500"><%= t("user_invitations.notice.expire", expiry: UserInvitation::EXPIRY.in_days.round) %></p>
    </div>
  </div>
  <div class="flex items-center justify-end gap-3 py-4 rounded-b-xl">
    <%= form.submit t("shared.buttons.save"), class: "px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 cursor-pointer" %>
  </div>
<% end %>
